

<div class="booyah-box col-xs-2 col-xs-offset-1">
	<%= search_form_for @search, url: search_listings_path, method: :post do |f| %>
		<div class="field">
    		
			<%= f.label :make_cont, "Make" %>
			<%= f.collection_select(:make_cont, Manufacturer.all, :name, :name) %>
			<br /><br />
			<%= f.label :model_cont, "Model" %>
			<%= f.text_field :model_cont %>
			<%= f.label :mileage_gteq, "Mileage Min" %>
			<%= f.text_field :mileage_gteq %>
			<%= f.label :mileage_lteq, "Mileage Max" %>
			<%= f.text_field :mileage_lteq %>
		</div><br />
		<div class="actions"><%= f.submit "Search" %></div>
</div>
<% end %>
<div class="col-xs-8">
<% @listings.each do |l| %>
	<div class="booyah-box">
		<h2><%= l.year %> <%= l.make %> <%= l.model %> <%= l.submodel %></h2><br />
		<ul>
			<li><%= l.mileage %></li>
			<li><%= l.wheelsize %></li>
			<li><%= l.description %></li>
		</ul>
	</div>

<% end %>
</div>

<div class="row">
	<div class="paginate col-md-3 col-xs-3 col-md-offset-8 col-xs-offset-8">
		<h4><span class="prev disabled"><%= raw(t 'views.pagination.previous') %></span>
				<%= paginate @listings %></h4>
		</div>
</div>
