<h1>New Listing</h1>

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Your Electic Car Details</h1>
  <%= simple_form_for @listing do |f| %>
    <%= f.input :year %>
    <%= f.input :make %>
    <%= f.input :model %>
    <%= f.input :submodel %>
    <%= f.input :description %>
    <%= f.input :wheelsize %>
    <%= f.input :mileage %>
     <br />
      <%= f.submit 'Create', :class => 'btn btn-primary' %>
  <% end %>
</div>